#include <stdio.h>

int sumOfSquares(int n) {
    int sum = 0, digit;
    while (n > 0) {
        digit = n % 10;
        sum += digit * digit;
        n /= 10;
    }
    return sum;
}

int main() {
    int n, result;

    printf("Enter a number: ");
    scanf("%d", &n);

    result = n;

    while (result != 1 && result != 4) {
        result = sumOfSquares(result);
    }

    if (result == 1)
        printf("Happy Number");
    else
        printf("Not a Happy Number");

    return 0;
}
