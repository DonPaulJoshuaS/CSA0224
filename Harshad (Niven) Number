#include <stdio.h>

int main() {
    int n, sum = 0, digit, temp;

    printf("Enter a number: ");
    scanf("%d", &n);

    temp = n;

    while (temp > 0) {
        digit = temp % 10;
        sum += digit;
        temp /= 10;
    }

    if (n % sum == 0)
        printf("Harshad Number");
    else
        printf("Not a Harshad Number");

    return 0;
}
